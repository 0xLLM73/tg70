{
  "name": "@cabal-ventures/telegram-bot",
  "version": "0.1.0",
  "description": "Cabal.Ventures Telegram Bot - Your gateway to exclusive crypto communities",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "start": "pnpm --filter bot start",
